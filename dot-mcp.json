{
  "mcpServers": {
    "zen": {
      "type": "stdio",
      "command": "$HOME/.local/bin/uvx",
      "args": [
        "--from",
        "git+https://github.com/BeehiveInnovations/zen-mcp-server.git",
        "zen-mcp-server"
      ],
      "env": {
        "OPENROUTER_API_KEY": "${OPENROUTER_API_KEY}",
        "OPENAI_API_KEY": "${OPENAI_API_KEY}"
      }
    },
    "serena": {
      "command": "$HOME/.local/bin/uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server"
      ]
    },
    "crawl": {
      "type": "http",
      "url": "${CRAWL4AI_MCP_URL}/mcp"
    },
    "dataforseo": {
      "type": "http",
      "url": "${DATAFORSEO_MCP_URL}/mcp"
    },
    "playwright": {
      "type": "http",
      "url": "${PLAYWRIGHT_MCP_URL}/mcp"
    }
  }
}